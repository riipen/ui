{
  "name": "riipen-ui",
  "version": "0.1.11",
  "private": false,
  "author": {
    "name": "Riipen",
    "email": "admin@riipen.com",
    "url": "https://riipen.com",
    "directory": "packages/riipen-ui"
  },
  "description": "Riipen React component UI kit.",
  "keywords": [
    "react",
    "react-component",
    "riipen design",
    "riipen-ui"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/riipen/ui/packages/riipen-ui",
    "directory": "packages/riipen-ui"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/riipen/ui/issues"
  },
  "homepage": "https://ui.riipen.com/",
  "engines": {
    "npm": ">=8.0.0"
  },
  "sideEffects": false,
  "scripts": {
    "build": "babel ./src --out-dir ./temp && cp ./package.json ./temp && cp ./README.md ./temp && rsync ./temp/ ./build/ -r --delete-after && rm -rf ./temp",
    "ci:audit": "audit-ci --moderate",
    "ci:test:coverage": "NODE_ENV=test NODE_PATH=./ nyc mocha --opts ./test/unit/ci.mocha.opts",
    "format": "prettier --write \"**/*.{js,jsx}\"",
    "lint": "eslint .",
    "precommit": "lint-staged",
    "release": "./scripts/update_version.sh"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "npm run format",
      "npm run lint",
      "git add"
    ]
  },
  "peerDependencies": {
    "draft-js": ">= 0.11.6",
    "react": ">= 16.11.0",
    "react-dom": ">= 16.11.0",
    "styled-jsx": ">= 3.2.2"
  },
  "dependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.10.4",
    "@fortawesome/fontawesome-svg-core": "^1.2.30",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "@fortawesome/react-fontawesome": "^0.1.11",
    "clsx": "1.0.4",
    "draft-convert": "2.1.10",
    "popper.js": "1.16.1",
    "prop-types": "15.7.2",
    "react-transition-group": "^4.4.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "audit-ci": "3.0.1",
    "eslint": "6.5.1",
    "lint-staged": "9.4.2",
    "prettier": "1.18.2"
  }
}
